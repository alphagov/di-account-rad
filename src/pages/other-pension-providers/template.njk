{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% extends "base.njk" %}

{% block content %}
    <h2 class="govuk-heading-l">Telling other pension providers</h2>

    <p class="govuk-body">We can also tell the following pension providers about the death.
      This is to find out whether the person had a civil service or army pension,
      and to update relevant records and pension payments.
    </p>

    <form action="/other-pension-providers" method="post" novalidate>

        {{ govukCheckboxes({
            classes: "govuk-radios--inline",
            name: "other-pension-providers",
            values: form['other-pension-providers'] or session['other-pension-providers'],
            errorMessage: errors['other-pension-providers'],
            fieldset: {
                legend: {
                    text: "Select the pension providers you want us to tell",
                    isPageHeading: true,
                    classes: "govuk-fieldset__legend--m"
                }
            },
            hint: {
              text: "Select all pensions that apply"
            },
            items: [
              {
                value: "civil",
                text: "Civil Service Pension Scheme"
              },
              {
                value: "armed",
                text: "Armed Forces Pension Scheme"
              },
              {
                value: "armed-compensation",
                text: "Armed Forces Compensation Scheme"
              },
              {
                value: "war",
                text: "War Pensions Scheme (compensation scheme for veterans for injuries or illnesses pre 2005)"
              },
              {
                divider: "or"
              },
              {
                value: "none",
                text: "None",
                behaviour: "exclusive"
              }
            ]
        }) }}

      {{ govukDetails({
        summaryText: "If thereâ€™s a missing pension",
        text: "If you know they had another public sector pension, contact the relevant pension provider directly."
      }) }}

        {{ govukButton({
            text: "Continue",
            preventDoubleClick: true
        }) }}
    </form>

{% endblock %}
