{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "base.njk" %}

{% block content %}
<h1 class="govuk-heading-xl">Telling Civil Service Pension Scheme</h1>

<p class="govuk-body">We can tell Civil Service Pension Scheme about the death.
This is to find out whether the person had a Civil Service Pension, and to update relevant records and pension payments.</p>

<h2 class="govuk-heading-m">Tell Civil Service Pension Scheme about the death?</h2>

<form action="/civil-service-pension" method="post" novalidate>

        {{ govukRadios({
            name: "tell-civil-service-pension",
            value: form['tell-civil-service-pension'] or session['tell-civil-service-pension']['S'],
            errorMessage: errors['tell-civil-service-pension'],
            fieldset: {
                legend: {
                    text: "Tell Civil Service Pension Scheme about the death?",
                    isPageHeading: false,
                    classes: "govuk-fieldset__legend--l"
                }
            },
            items: [
                {
                    value: "yes",
                    text: "Yes"
                },
                {
                    value: "no",
                    text: "No"
                }
            ]
        }) }}


        {{ govukButton({
            text: "Continue",
            preventDoubleClick: true
        }) }}

</form>


{% endblock %}
